# x402 Intent Firewall - Environment Configuration

# ============================================================================
# BLOCKCHAIN CONFIGURATION
# ============================================================================

# Deployer private key (without 0x prefix)
PRIVATE_KEY=your_private_key_here

# Cronos RPC URLs
CRONOS_TESTNET_RPC=https://evm-t3.cronos.org
CRONOS_MAINNET_RPC=https://evm.cronos.org

# Chain ID (338 = Testnet, 25 = Mainnet)
CRONOS_CHAIN_ID=338

# Cronoscan API key for contract verification
CRONOSCAN_API_KEY=your_cronoscan_api_key

# ============================================================================
# CONTRACT ADDRESSES (after deployment)
# ============================================================================

REGISTRY_ADDRESS=0x0000000000000000000000000000000000000000
ROUTER_ADDRESS=0x0000000000000000000000000000000000000000
POLICY_ENGINE_ADDRESS=0x0000000000000000000000000000000000000000

# ============================================================================
# AGENT CONFIGURATION
# ============================================================================

# Agent address (authorized to approve/reject intents)
AGENT_ADDRESS=0x0000000000000000000000000000000000000000

# ============================================================================
# SERVER CONFIGURATION
# ============================================================================

PORT=3000
NODE_ENV=development
